<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <!-- 渐变 -->
        <gradient
            android:startColor="#4a7cb9"
            android:endColor="#FFFFFF"
            android:type="radial"
            android:gradientRadius="50" />

        <stroke
            android:width="2dp"
            android:color="#FF000000" />
        <!-- 圆角 -->
        <corners
            android:radius="2dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>

<item android:state_focused="true" >
    <shape>
        <gradient
            android:startColor="#ffc2b7"
            android:endColor="#ffc2b7"
            android:angle="270" />
        <stroke
            android:width="2dp"
            android:color="#dcdcdc" />
        <corners
            android:radius="2dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>

<item>
    <shape>
        <!--solid：实心，填充-->
        <solid android:color="#00ffffff"/>
        <!-- 描边 -->
        <stroke
            android:width="2dp"
            android:color="#f0747474"
            android:dashWidth="5dp"
            android:dashGap="3dp" />
        <corners
            android:topRightRadius="5dp"
            android:bottomLeftRadius="5dp"
            android:topLeftRadius="0dp"
            android:bottomRightRadius="0dp"
            />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
</selector>